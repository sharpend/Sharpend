<!--
  every window you want to use in the dockapplication needs an entry in the windows.config file
  
  you also can define delegates which will be hooked to the window when the window is created
-->

<configuration>
	<windows>
		<window createwindow="false" class="DockApplication.Window1" 
				assembly ="DockApplication" restorewindow="true">
	      	<params>
	        	<param name="name" type="System.String">Window1</param>
	      	</params>
	      	
	      	<!--
	      	  hook OnShowText event to the ShowText function from the sample window
	      	  (will work when the SampleWindow is already created)
	      	-->
			<delegates>
			      <delegate target="DockApplication.SampleWindow" function="ShowText" event="OnShowText">
				  </delegate>
			</delegates>
			
	    </window>
	    
	    <window createwindow="false" class="DockApplication.SampleWindow" 
				assembly ="DockApplication" restorewindow="true">
	      	<params>
	        	<param name="name" type="System.String">SampleWindow</param>
	      	</params>
	      	
	      	<!--
	      	  hook OnShowText event from DockApplication.Window1 to "this" (DockApplication.SampleWindow)
	      	  ShowText function.
	      	  (will work when Window1 is already created)
	      	-->
	      	<delegates>
			      <delegate target="this" source="DockApplication.Window1" function="ShowText" event="OnShowText">
				  </delegate>
			</delegates>
	      	
	    </window>
	</windows>
</configuration>